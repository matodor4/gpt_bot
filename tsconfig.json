{
  "compilerOptions": {
    "target": "ESNext", // Target version of ECMAScript to compile to
    "module": "NodeNext", // Specify module code generation: CommonJS for Node.js
    "outDir": "./dist", // Output directory for compiled code
    "strict": true, // Enables strict type-checking
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules
    "experimentalDecorators": true, // Enables support for experimental decorators
    "emitDecoratorMetadata": true // Emit metadata for decorator type annotations
  },
  "paths": {
    "@ffmpeg-installer/ffmpeg": ["node_modules/@ffmpeg-installer/ffmpeg"]
  },
  "include": ["src/**/*"], // Include TypeScript files under this directory
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude files from being compiled
}